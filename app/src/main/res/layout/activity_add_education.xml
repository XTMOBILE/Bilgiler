<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ext01d1840.bilgiler.AddEducation"
    android:background="#7a8594">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OKUL ADI  **"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/textView9"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFF"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/etSchoolName"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOLUM  **"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:id="@+id/textView10"
            android:layout_below="@+id/etSchoolName"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/etDivision"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spnStatus"
            android:layout_below="@+id/textView11"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DURUM  **"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:id="@+id/textView11"
            android:layout_below="@+id/etDivision"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BAŞLANGIÇ TARİHİ  **"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFF"
            android:id="@+id/textView12"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/etStartDate"
            android:layout_below="@+id/textView12"
            android:layout_alignParentStart="true"
            android:onClick="dateOnclick"
             />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/cStart"
            android:src="@drawable/calendar"
            android:layout_below="@+id/textView12"
            android:layout_toEndOf="@+id/etStartDate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BİTİŞ TARİHİ"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFF"
            android:id="@+id/textView13"
            android:layout_below="@+id/etStartDate"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/etEndDate"
            android:layout_below="@+id/textView13"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/cEnd"
            android:src="@drawable/calendar"
            android:layout_below="@+id/textView13"
            android:layout_toEndOf="@+id/etEndDate" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KAYDET"
            android:id="@+id/btnAddEdu"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#f7d09a"
            android:onClick="kaydetOnClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VAZGEÇ"
            android:id="@+id/btnCancelEdu"
            android:layout_alignTop="@+id/btnAddEdu"
            android:layout_alignParentEnd="true"
            android:background="#f7d09a"
            android:onClick="cancelOnClick" />


    </RelativeLayout>

</RelativeLayout>
